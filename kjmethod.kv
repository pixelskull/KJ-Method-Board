#:kivy 1.8.0

<KJMethodScreen>:
	KJMethod: 
		canvas.before:
			Color: 
				rgb: 0,0,0
			Rectangle: 
				size: root.size
		Menu:
			size_hint: None, None
			size: root.size
		LazySusan:
			topic_label: topic_label
			label1: label1
			label2: label2
			label3: label3 
			label4: label4 
			label5: label5
			size_hint: None, None
			size: 0.166*root.size[0], 0.166*root.size[0]
			pos: root.center[0]-(self.size[0]/2), root.center[1]-(self.size[1]/2)
			canvas.before: 
				PushMatrix
				Rotate: 
					angle: self.lazy_angle
					origin: self.center
				Color: 
					rgba: self.color
				Ellipse: 
					size: self.size
					pos: self.pos
			canvas.after:
				PopMatrix
			Label: 
				id: topic_label
				pos: self.parent.center[0] - self.width/2, self.parent.center[1]+self.parent.height/2 - 50
				size: self.texture_size
				canvas: 
					Color: 
						rgba: 1,1,1,0.2
					Rectangle: 
						pos: self.pos
						size: self.size
			Label:
				id: label1
				pos: topic_label.pos[0], topic_label.pos[1]-20
				size: self.texture_size
				canvas:
					Color: 
						rgba: 1,1,1,0.2
					Rectangle: 
						pos: self.pos
						size: self.size
			Label:
				id: label2
				pos: label1.pos[0], label1.pos[1]-20
				size: self.texture_size
				canvas:
					Color: 
						rgba: 1,1,1,0.2
					Rectangle: 
						pos: self.pos
						size: self.size
			Label:
				id: label3
				pos: label2.pos[0], label2.pos[1]-20
				size: self.texture_size
				canvas:
					Color: 
						rgba: 1,1,1,0.2
					Rectangle: 
						pos: self.pos
						size: self.size
			Label:
				id: label4
				pos: label3.pos[0], label3.pos[1]-20
				size: self.texture_size
				canvas:
					Color: 
						rgba: 1,1,1,0.2
					Rectangle: 
						pos: self.pos
						size: self.size
			Label:
				id: label5
				pos: label4.pos[0], label4.pos[1]-20
				size: self.texture_size
				canvas:
					Color: 
						rgba: 1,1,1,0.2
					Rectangle: 
						pos: self.pos
						size: self.size

